<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MSAzureServicesExamples.Views.TextFileUploadAndDownloadPage">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Label Text="Text Upload and Download" FontAttributes="Bold" HorizontalOptions="Center" />

            <Label Text="Enter text" />

            <Editor x:Name="uploadEditor" HeightRequest="100" />

            <Button x:Name="uploadButton" BackgroundColor="DarkSlateBlue" TextColor="White" Text="Upload" />

            <ActivityIndicator x:Name="activityIndicator" />

            <Button x:Name="downloadButton" Text="Download" BackgroundColor="Gray" TextColor="White" IsEnabled="false" />

            <Editor x:Name="downloadEditor" HeightRequest="100" IsEnabled="false" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>